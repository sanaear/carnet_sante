{% extends 'base.html.twig' %}

{% block title %}My Prescriptions{% endblock %}

{% block body %}
    <h1>My Prescriptions</h1>

    {% if ordonnances|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Doctor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ordonnance in ordonnances %}
                    <tr>
                        <td>{{ ordonnance.createdAt|date('d/m/Y') }}</td>
                        <td>{{ ordonnance.consultation.medecin.fullName }}</td>
                        <td>
                            <a href="{{ path('patient_ordonnance_download', {'id': ordonnance.id}) }}" 
                               class="btn btn-sm btn-primary">
                                Download
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">No prescriptions found</div>
    {% endif %}
{% endblock %}
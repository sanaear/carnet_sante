{% extends 'admin/base.html.twig' %}

{% set titleText = type == 'patient' ? 'Ajouter un patient' : 'Ajouter un médecin' %}

{% block title %}{{ titleText }}{% endblock %}



{% block content %}
   <style>
  :root {
    --main-color: {{ type == 'patient' ? '#2563eb' : '#059669' }};
    --main-color-light: {{ type == 'patient' ? '#3b82f6' : '#10b981' }};
    --focus-shadow: {{ type == 'patient' ? 'rgba(37, 99, 235, 0.2)' : 'rgba(3, 83, 50, 0.2)' }};
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(to bottom, #ffffff, #f0f7ff);
    margin: 0;
    padding: 2rem;
  }

  .form-card {
    max-width:100%;
    margin: auto;
    background-color: white;
    border-radius: 1rem;
    box-shadow: 0 9px 20px rgba(0, 0, 0, 0.144);
    overflow: hidden;
  }

  .header {
    background-color: var(--main-color);
    color: white;
    padding: 2rem;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }

  .section {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .section-title {
    display: flex;
    gap: 0.5rem;
    font-size: 1.2rem;
    font-weight: 600;
    color: #1f2937;
  }

  .input-group {
    margin-bottom: 1rem;
  }

  label {
    display: block;
    font-size: 0.95rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.3rem;
  }

  input[type="text"],
  input[type="date"],
  input[type="email"],
  input[type="password"],
  select,
  textarea {
    width: 100%;
    padding: 0.7rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    background-color: white;
    font-size: 1rem;
    box-sizing: border-box;
    transition: border-color 0.2s ease;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: var(--main-color);
    box-shadow: 0 0 0 3px var(--focus-shadow);
  }

  .password-wrapper {
    position: relative;
  }

  .toggle-password {
    position: absolute;
    right: 1rem;
    top: 38px;
    background: none;
    border: none;
    cursor: pointer;
    color: #6b7280;
    font-size: 1rem;
  }

  .btn-primary{
    background: linear-gradient(to right, var(--main-color), var(--main-color-light));
    color: white;
    font-size: 1.1rem;
    font-weight: bold;
    padding: 1rem;
    width: 30%;
    margin: 0 auto;
    border: none;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: background 0.3s ease, transform 0.2s ease;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;

  }

  .btn-primary:hover {
    transform: translateY(-2px);
    cursor: pointer;
  }


  .grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .grid-2 {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="form-card">
 

        {{ form_start(form) }}
            <!-- Section: Informations personnelles -->
  <div class="section">
    <div class="section-title"><i class="fas fa-user" style="color:#2563eb;"></i> Informations personnelles</div>
    <div class="grid-2">
      <div class="input-group">
        {{ form_label(form.firstName, "Prénom*") }}
        {{ form_widget(form.firstName, {'attr': {'placeholder': 'Votre prénom', 'required': 'required'}}) }}
      </div>
      <div class="input-group">
        {{ form_label(form.lastName, "Nom*") }}
        {{ form_widget(form.lastName, {'attr': {'placeholder': 'Votre nom', 'required': 'required'}}) }}
      </div>
      <div class="input-group">
        {{ form_label(form.phone, "Téléphone*") }}
        {{ form_widget(form.phone, {'attr': {'placeholder': '06 12 34 56 78', 'required': 'required'}}) }}
      </div>
       {# Champs spécifiques au patient #}
            {% if type == 'patient' %}
            
                 <!-- Section: Informations médicales -->
  
    <div class="input-group">
        {{ form_label(form.birthDate, "Date de naissance*") }}
        {{ form_widget(form.birthDate, {'attr': {'placeholder': 'jj/mm/aaaa', 'required': 'required'}}) }}
      </div>
      <div class="input-group" style="grid-column: span 2;">
        {{ form_label(form.address, "Adresse*") }}
        {{ form_widget(form.address, {'attr': {'placeholder': 'Votre adresse complète', 'required': 'required'}}) }}
      </div>
    <div class="section-title"><i class="fas fa-heart" style="color:red;"></i> Informations médicales</div>
      <div class="input-group" style="grid-column: span 2;">
        {{ form_label(form.allergies, "Allergies connues") }}
        {{ form_widget(form.allergies, {'attr': {'placeholder': 'Décrivez vos allergies'}}) }}
      </div>
       <div class="input-group">
        {{ form_label(form.gender, "Genre*") }}
        {{ form_widget(form.gender, {'attr': {'required': 'required'}}) }}
      </div>
      <div class="input-group">
        {{ form_label(form.bloodType, "Groupe sanguin*") }}
        {{ form_widget(form.bloodType, {'attr': {'required': 'required'}}) }}
      </div>
    </div>
  
            {% endif %}

            {# Champs spécifiques au médecin #}
            {% if type == 'doctor' %}
                <div class="input-group">
        {{ form_label(form.speciality, "Spécialité*") }}
        {{ form_widget(form.speciality, {'attr': {'required': 'required'}}) }}
      </div>
            {% endif %}
      <!-- Section: Informations de connexion -->
  
    <div class="section-title"><i class="fas fa-lock" style="color:#16a34a;"></i> Informations de connexion</div>
      <div class="input-group"style="grid-column: span 2;">
        {{ form_label(form.email, "Email*") }}
        {{ form_widget(form.email, {'attr': {'placeholder': 'votre.email@exemple.com', 'required': 'required'}}) }}
      </div>
      <div class="input-group password-wrapper">
        {{ form_label(form.plainPassword.first, "Mot de passe*") }}
        {{ form_widget(form.plainPassword.first, {'attr': {'type': 'password', 'id': 'password1', 'required': 'required'}}) }}
        
      </div>
      <div class="input-group password-wrapper">
        {{ form_label(form.plainPassword.second, "Confirmer le mot de passe*") }}
        {{ form_widget(form.plainPassword.second, {'attr': {'type': 'password', 'id': 'password2', 'required': 'required'}}) }}
        
      </div>
    </div>
   <button type="submit" class="btn btn-primary">
                {{ type == 'patient' ? 'Enregistrer le patient' : 'Enregistrer le médecin' }}
            </button>
    </div>
 

           
        {{ form_end(form) }}
    
{% endblock %}

{% extends 'medecin/base.html.twig' %}

{% block title %}Consultation #{{ consultation.id }}{% endblock %}

{% block content %}
    <div class="px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-xl font-semibold text-gray-900">Consultation</h1>
                <p class="mt-2 text-sm text-gray-700">Détails de la consultation</p>
            </div>
            <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none space-x-2">
                <a href="{{ path('medecin_consultation_edit', {'id': consultation.id}) }}"
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Modifier
                </a>
                {% if not consultation.ordonnance %}
                    <div class="flex space-x-2">
                        <a href="{{ path('medecin_ordonnance_generate', {'id': consultation.id}) }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Générer une ordonnance
                        </a>
                    </div>
                {% else %}
                    <div class="flex items-center space-x-2">
                        {% if consultation.ordonnance.isGenerated %}
                            <a href="{{ path('medecin_ordonnance_view', {'id': consultation.ordonnance.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Voir l'ordonnance
                            </a>
                            <a href="{{ path('medecin_ordonnance_download', {'id': consultation.ordonnance.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Télécharger le PDF
                            </a>
                            <form method="post" action="{{ path('medecin_ordonnance_delete', {'id': consultation.ordonnance.id}) }}" class="inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ordonnance ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.ordonnance.id) }}">
                                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    Supprimer
                                </button>
                            </form>
                        {% else %}
                            <a href="{{ path('medecin_ordonnance_download', {'id': consultation.ordonnance.id}) }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Télécharger le PDF
                            </a>
                            <form method="post" action="{{ path('medecin_ordonnance_delete', {'id': consultation.ordonnance.id}) }}" class="inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ordonnance ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.ordonnance.id) }}">
                                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Détails de la consultation</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Informations sur la consultation</p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                <dl class="sm:divide-y sm:divide-gray-200">
                    <!-- Patient Information -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-700">Patient</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-medium">
                            {{ consultation.patient.fullName }}
                            <p class="text-sm text-gray-500 mt-1">
                                {{ consultation.patient.email }}
                                {% if consultation.patient.phone %}
                                    <br>Tel: {{ consultation.patient.phone }}
                                {% endif %}
                                {% if consultation.patient.birthDate %}
                                    <br>Né(e) le: {{ consultation.patient.birthDate|date('d/m/Y') }}
                                    {% set age = date().diff(date(consultation.patient.birthDate)).y %}
                                    ({{ age }} ans)
                                {% endif %}
                            </p>
                        </dd>
                    </div>

                    <!-- Consultation Details -->
                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Date et heure</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ consultation.date|date('d/m/Y H:i') }}
                        </dd>
                    </div>
                    
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Médecin</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            Dr. {{ consultation.doctor.firstName }} {{ consultation.doctor.lastName }}
                            <p class="text-sm text-gray-500 mt-1">
                                {{ consultation.doctor.speciality ?? 'Médecin généraliste' }}
                            </p>
                        </dd>
                    </div>

<!-- Consultation Status -->
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Statut</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                {% if consultation.status == 'planifiee' %}
                                    bg-yellow-100 text-yellow-800
                                {% elseif consultation.status == 'terminee' %}
                                    bg-green-100 text-green-800
                                {% elseif consultation.status == 'annulee' %}
                                    bg-red-100 text-red-800
                                {% else %}
                                    bg-gray-100 text-gray-800
                                {% endif %}">
                                {{ consultation.status|capitalize }}
                            </span>
                        </dd>
                    </div>

                    <!-- Motif & Description -->
                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Motif</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ consultation.motif ?? 'Non spécifié' }}
                        </dd>
                    </div>

                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Description</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ consultation.description|nl2br|default('Aucune description fournie') }}
                        </dd>
                    </div>

                    <!-- Notes -->
                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Notes</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ consultation.notes|nl2br|default('Aucune note') }}
                        </dd>
                    </div>
                    
                    <!-- Ordonnance Section -->
                    <div class="py-6 sm:py-8 border-t border-gray-200">
                        <div class="px-4 sm:px-6">
                            <h3 class="text-lg font-medium text-gray-900 mb-4">Ordonnance</h3>
                            
                            {% if consultation.ordonnance %}
                                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center">
                                            <svg class="h-10 w-10 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                            <div class="ml-4">
                                                <p class="text-sm font-medium text-gray-900">
                                                    {{ consultation.ordonnance.originalName|default('Ordonnance.pdf') }}
                                                </p>
                                                <p class="text-sm text-gray-500">
                                                    {{ consultation.ordonnance.size|default(0)|format_bytes }}
                                                    • 
                                                    {{ consultation.ordonnance.updatedAt|date('d/m/Y H:i') }}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="flex space-x-2">
                                            <a href="{{ path('medecin_ordonnance_download', {'id': consultation.ordonnance.id}) }}"
                                               class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                                <svg class="-ml-0.5 mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                                </svg>
                                                Télécharger
                                            </a>
                                            <form method="post" action="{{ path('medecin_ordonnance_delete', {'id': consultation.ordonnance.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ordonnance ?');" class="inline-block">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.ordonnance.id) }}">
                                                <button type="submit" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                                    <svg class="-ml-0.5 mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                    Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune ordonnance</h3>
                                    <p class="mt-1 text-sm text-gray-500">Aucune ordonnance n'a été ajoutée à cette consultation.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </dl>
            </div>
        </div>
        
        <div class="mt-6">
            <a href="{{ path('medecin_dashboard') }}" class="text-sm font-medium text-blue-600 hover:text-blue-500">
                &larr; Retour à la liste des consultations
            </a>
        </div>
    </div>
{% endblock %}

                    </div>
                    {{ form_errors(form.status) }}
                </div>

                <!-- Start Time Field -->
                <div class="sm:col-span-4">
                    {{ form_label(form.startTime, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
